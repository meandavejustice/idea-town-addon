{
  "title": "Idea Town",
  "name": "idea-town-addon",
  "version": "0.0.1",
  "description": "The addon where ideas come to idea",
  "main": "index.js",
  "author": [
    "Les Orchard <lorchard@mozilla.com>",
    "Dave Justice <djustice@mozilla.com"
  ],
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "scripts": {
    "start": "st -nc .",
    "package": "jpm xpi && mv @idea-town-addon-0.0.1.xpi dist/idea-town-addon-0.0.1.xpi"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "exclude": "^1.0.0",
    "xtend": "^4.0.0"
  },
  "devDependencies": {
    "st": "^0.5.5"
  },
  "CONFIG": {
    "CONTENT_URL": "http://localhost:1337/stub-content/index.html",
    "BADGE_COLOR": "#00AAAA",
    "ALLOWED_ORIGINS": [
      "http://localhost:1337/*",
      "http://127.0.0.1:1337/*",
      "https://ideatown.firefox.com/*",
      "https://mozilla.github.io/idea-town-addon/stub-content/",
      "https://people.mozilla.org/~jhirsch/universal-search-addon/*"
    ],
    "UPDATES": [
      {
        "title": "Universal Search",
        "desc": "Expandable embed search from your address bar",
        "url": "https://people.mozilla.org/~jhirsch/universal-search-addon/addon.xpi"
      },
      {
        "title": "Fox Splitter",
        "desc": "Split your browser windows like a tiling wm",
        "url": "https://addons.mozilla.org/firefox/downloads/latest/324976/addon-324976-latest.xpi?src=search"
      },
      {
        "title": "Idea Town",
        "desc": "Manage idea town experiments",
        "url": "http://localhost:8899/dist/idea-town-addon-0.0.1.xpi"
      }
    ]
  }
}
